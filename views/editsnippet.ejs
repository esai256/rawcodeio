          <input type="submit" id="savebtn" value="Save" />
        </div>
    </div> -->

    </section>
  </form>

  <form name="delete-snippet-form" id="delete-snippet-form" class="clearfix" method="post" action="/snippets/deletesnippet/<%= snippet._id %>">
    <input type="submit" id="deletebtn" class="btn btn-red" value="Delete Snippet" />
  </form>
</div>

