<% include _parts/header %>


  <h1 class="intro overview">Search all <span class="accent">lists</span></h1>
  <h2 class="intro">There are <span><%= count %></span> lists</h2>
  <form action="/searchlists" method="post">
    <input name="searchterm" type="search">
  </form>
</div>

<div class="grid lists small clearfix">

        <%
          recentLists.forEach(function(el, index) {
        %>

        <div class="item list">
          <div class="inner">
            <a href="/lists/<%= el._id %>" class="inneritem">
              <div class="listicon"></div>
              <h2><%= el.name %></h2>
              <p>
                <% if(el.info) {%>
                  <%= el.info.split(/\s+/,10).join(" "); %> ...
                <% } %>
              </p>
            </a>
          </div>
        </div>

        <%
          });
        %>

</div>

  <%

  var prevpage = parseInt(pageid)-1,
      nextpage = parseInt(pageid)+1;

  %>

<div class="seperator"></div>

<section class="pagination wrap a-center">
  <% if (parseInt(pageid) > 0) { %>
    <a href="/lists/page/<%= prevpage %>" class="btn btn-default">&larr; Previous page</a>
  <% }Â %>
  <% if(parseInt(nextpage)*15 < parseInt(count)){ %>
    <a href="/lists/page/<%= nextpage %>" class="btn btn-default">Next page &rarr;</a>
  <% } %>
</section>

<% include _parts/footer %>